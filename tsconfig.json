{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",        // Includes all files in the src directory
    "src/types/**/*",
    "config/**/*",
    "src/config/**/*"   // Includes all files in the types directory
  ],
  "exclude": [
    "node_modules"
  ]
}